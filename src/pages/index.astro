---
import Page from "@layouts/Page.astro";
import Navbar from "@components/Navbar.astro";
import Carousel from "@components/Carousel.astro";
import { Picture } from "@astrojs/image/components";
---

<Page>
  <Navbar page="home" />
  <main>
    <div class="container-fluid">
      <div class="grid">
        <div class="row justify-content-center bg-blue-900">
          <div class="col-auto">
            <Carousel />
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <div class="card my-4">
              <div class="grid m-4">
                <div class="row">
                  <div class="col-5">
                    <Picture
                      class="d-inline-block"
                      src="/placeholder.png"
                      widths={[150, 300, 600]}
                      sizes="(max-width 600px) 100vw, 35vw"
                      aspectRatio="5:3"
                      alt="..."
                    />
                  </div>
                  <div class="col">
                    <div class="card-body">
                      <h5 class="card-title">About Us</h5>
                      <p class="card-text">
                        We're a full service provider of new and used machinery
                        and related supplies for manufacturers of wood,
                        composites, ferrous and non-ferrous metals.
                      </p>
                      <p class="card-text">
                        From helping to define the right machines or services to
                        fit your needs, dust extraction, software consultation,
                        facilities preparation, material handling and plant
                        layouts, to machine implementation, after sales service,
                        preventive maintenance, and growth planning, we strive
                        to be your partner in production.
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <style>
    .card {
      --bs-card-bg: #eeeeee;
      --bs-card-border-width: 0;
    }
  </style>
</Page>
